<Window x:Class="ViewLayaer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewLayaer"
        xmlns:logic="clr-namespace:LogicLayaer;assembly=LogicLayaer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <logic:MainControll/>
    </Window.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding Products}" HorizontalAlignment="Left" Height="223" Margin="30,26,0,0" VerticalAlignment="Top" Width="286">
            <ListBox.ItemTemplate>
                <DataTemplate  >
                    <StackPanel Orientation="Vertical">
                        <Label Content="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
